<UserControl x:Class="AVIOT.ViewResouces.HwWiFiModuleInstance"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AVIOT.ViewResouces"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">
    <Grid>
        <Rectangle Fill="#FF1F2324" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="300"/>
        <Separator HorizontalAlignment="Left" Height="100" Margin="0,18,0,-38" VerticalAlignment="Top" Width="300"/>
        <TextBlock x:Name="tb_deviceName" HorizontalAlignment="Left" Margin="10,3,0,0" TextWrapping="Wrap" Text="Device" VerticalAlignment="Top" Height="36" Width="171" Foreground="White" FontSize="28"/>
        <Button x:Name="TriggerButton" Content="OFF" HorizontalAlignment="Left" Margin="215,24,0,0" VerticalAlignment="Top" Width="75" Background="#FFAD1212" Click="TriggerButton_Click"/>
        <TextBlock x:Name="tb_deviceIp" HorizontalAlignment="Left" Margin="10,39,0,0" TextWrapping="Wrap" Text="IP:" VerticalAlignment="Top" Height="36" Width="171" Foreground="#FF5779BC"/>


    </Grid>
</UserControl>
