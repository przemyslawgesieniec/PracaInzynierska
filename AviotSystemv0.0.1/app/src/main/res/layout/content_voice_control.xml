<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gesieniec.przemyslaw.aviotsystemv001.VoiceControlActivity"
    tools:showIn="@layout/activity_voice_control"
    android:weightSum="1">


    <Button
        android:id="@+id/btn_VoiceRecActivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:onClick="onClickGetSpeechInput"
        android:text="On" />

    <Button
        android:id="@+id/btn_VoiceRecDeactivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:onClick="btn_VoiceRecDeactivation"
        android:text="Off" />

</LinearLayout>
